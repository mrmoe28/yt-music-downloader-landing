{
  "name": "youtube-music-downloader-pro",
  "version": "1.0.0",
  "description": "A professional YouTube music downloader with modern UI",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:renderer\" \"wait-on http://localhost:3000 && NODE_ENV=development electron .\"",
    "dev:renderer": "cd renderer && npm run dev",
    "build": "npm run build:renderer && electron-builder",
    "build:renderer": "cd renderer && npm run build",
    "dist": "npm run build",
    "pack": "electron-builder --dir",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.youtube.musicdownloaderpro",
    "productName": "YouTube Music Downloader Pro",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "renderer/dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.music"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": "nsis"
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": "AppImage"
    }
  },
  "keywords": [
    "youtube",
    "music",
    "downloader",
    "electron",
    "desktop"
  ],
  "author": "YouTube Music Downloader Pro",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.0.1",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "wait-on": "^8.0.1"
  },
  "dependencies": {
    "child_process": "^1.0.2",
    "electron-store": "^10.1.0",
    "node-disk-info": "^1.3.0",
    "uuid": "^11.0.3"
  }
}